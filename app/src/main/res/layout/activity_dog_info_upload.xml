<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dog_info_upload">

    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    tools:srcCompat="@tools:sample/avatars[2]"
                    android:layout_marginRight="10dp"/>

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    tools:srcCompat="@tools:sample/avatars[2]"
                    android:layout_marginRight="10dp"/>

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    tools:srcCompat="@tools:sample/avatars[2]" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="이미지 첨부하기" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="댕댕이 이름"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Name"
                    android:textSize="18dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="종"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/breeds"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:hint="ex) 닥스훈트"
                    android:inputType="text"
                    android:textSize="18dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="나이 : "
                    android:textColor="@android:color/black"
                    android:textSize="20dp"/>

                <Spinner
                    android:id="@+id/age"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:spinnerMode="dialog" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="살"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성별 "
                    android:layout_weight="0.5"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"/>

                <RadioGroup
                    android:id="@+id/radio_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <RadioButton
                        android:id="@+id/btn_man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="남" />

                    <RadioButton
                        android:id="@+id/btn_woman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="여" />
                </RadioGroup>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중성화 여부 "
                    android:layout_weight="0.2"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"/>

                <RadioGroup
                    android:id="@+id/radio_operation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <RadioButton
                        android:id="@+id/btn_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Y" />

                    <RadioButton
                        android:id="@+id/btn_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="N" />
                </RadioGroup>
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="사는 곳"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"/>

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="130dp"
                    android:layout_height="45dp"
                    android:spinnerMode="dialog" />

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="130dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:spinnerMode="dialog" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="보증금"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/price"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:hint="Price"
                    android:inputType="number"
                    android:textSize="18dp"/>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"/>

                <Button
                    android:id="@+id/btn_warranty"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#FFD933"
                    android:onClick="warrantyClick"
                    android:text="추천"
                    android:textColor="#3F79FF"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="기간"
                android:textColor="@android:color/black"
                android:layout_marginBottom="10dp"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/date_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019-05-01"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/btn_start"
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    android:background="#FFD933"
                    android:onClick="mStartClick"
                    android:text="시작"
                    android:textColor="#3F79FF"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/date_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019-05-30"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/btn_end"
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:background="#FFD933"
                    android:onClick="mEndClick"
                    android:text="종료"
                    android:textColor="#3F79FF"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:text="부탁의 말"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/memo"
                android:inputType="textMultiLine"
                android:lines="5"
                android:minLines="1"
                android:maxLines="15"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical"
                android:hint="우리 댕댕이는요...."/>


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:background="#FFD933"
        android:onClick="UploadClick"
        android:text="등록하기"
        android:textColor="#3F79FF"
        android:textSize="30dp"
        android:textStyle="bold" />

</LinearLayout>